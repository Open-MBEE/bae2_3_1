<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>gov.nasa.jpl.mbee.bae</groupId>
  <artifactId>bae</artifactId>
  <version>0.0.6</version>
  <name>bae</name>
  <description>Behavior Analysis Engine for MBEE</description>
  <distributionManagement>
      <!-- use mvn -U deploy -DgeneratePom=true -Dpackaging=jar  -->
      <repository>
          <id>artifactory</id>
          <name>releases</name>
          <url>http://128.149.16.144:8082/artifactory/libs-release-local</url>
      </repository>
  </distributionManagement>
  <repositories>
      <repository>
          <id>artifactory</id>
          <name>releases</name>
          <url>http://128.149.16.144:8082/artifactory/libs-release-local</url>
      </repository>
  </repositories>
  <build>
    <sourceDirectory>src</sourceDirectory>
    <resources>
      <resource>
        <directory>src</directory>
        <excludes>
          <exclude>**/*.java</exclude>
        </excludes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>1.7</source>
          <target>1.7</target>
          <excludes>
              <exclude>**/magicdrawPlugin/**</exclude>
              <exclude>**/tests/**</exclude>
          </excludes>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
            <execution>
                <phase>generate-sources</phase>
                <goals><goal>add-source</goal></goals>
                <configuration>
                    <sources>
                        <source>src</source>
                        <source>thirdParty/douglascrockford-JSON-java-d15e776</source>
                        <source>thirdParty/javaparser-1.0.8-src</source>
                        <source>thirdParty</source>
                    </sources>
                </configuration>
            </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
        <groupId>gov.nasa.jpl.mbee.util</groupId>
        <artifactId>mbee_util</artifactId>
        <version>0.0.4</version>
    </dependency>
    <dependency>
        <groupId>gov.nasa.jpl.mbee.sysml</groupId>
        <artifactId>sysml</artifactId>
        <version>0.0.7</version>
    </dependency>
	<dependency>
	    <groupId>org.eclipse.emf</groupId>
	    <artifactId>org.eclipse.emf.ecore</artifactId>
	    <version>2.9.1-v20130827-0309</version>
	</dependency>  
	<dependency>
	    <groupId>concurrent</groupId>
	    <artifactId>concurrent</artifactId>
    <version>1.3.3</version>
</dependency>  
  </dependencies>
</project>
